package com.hxlxz.zxl;

import java.sql.Arrays;
import java.util.ArrayList;
import java.util.List;

public class ListTest {
	public List<Course> coursesToSelect;
	public ListTest(){
		this.coursesToSelect = new ArrayList<Course>();
	}
	/**
	 * 添加课程
	 */
	public void testAdd(){
		Course cr1 = new Course("1","数据结构");
		coursesToSelect.add(cr1);
		Course tmp = coursesToSelect.get(0);
		System.out.println("添加课程："+ tmp.id +"." + tmp.name);
		
		Course cr2 = new Course("2","C语言");
		coursesToSelect.add(0, cr2);
		Course tmp2 = coursesToSelect.get(0);
		System.out.println("添加课程：" + tmp2.id + "." + tmp2.name);
		
	//	Course cr3 = new Course("3","test");
	//	coursesToSelect.add(2,cr3);
		
		Course[] course = {new Course("3","离散数学"), new Course("4","汇编语言")};
		coursesToSelect.addAll(Arrays.asList(course));
	}
	public static void main(String[] args){
		ListTest lt = new ListTest();
		lt.testAdd();
	}

}

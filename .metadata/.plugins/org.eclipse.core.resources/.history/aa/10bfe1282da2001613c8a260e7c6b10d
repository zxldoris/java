package com.hxlxz.zxl;

public class Initail {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		isNeed();		//是否要租车
		Initail display = new Initail();
		display.displayTabs();
	}
	public static void isNeed(){	
		
	}
	public void displayTabs(){
		Car[] carRentTabs = new Car[]{new passengerCar("奥迪A4",500,4), new passengerCar("马自达6",400,4),
				new passengerCar("金龙",800,20), new PickUp("皮卡雪6",450,4,2), new Truck("松花江",400,4), 
				new Truck("依维柯",1000,20)};
		System.out.println("名称\t\t租金\t\t载人量\t\t载货量");
		for(int i=0;i<6;i++){
			if(carRentTabs[i] instanceof passengerCar){
				passengerCar passenger = new passengerCar(null,0,0);
				System.out.println(passenger.getName()+"\t\t"+passenger.getRentPrice()+"\t\t"+passenger.getPerCarry());
			}else if(carRentTabs[i] instanceof Truck){
				Truck truck = new Truck(null,0,0);
				System.out.println(truck.getName()+"\t\t"+truck.getRentPrice()+"\t\t\t\t"+truck.getGoodsCarry());
			}else{
				PickUp pickup = new PickUp(null,0,0,0);
				System.out.println(pickup.getName()+"\t\t"+pickup.getRentPrice()+"\t\t"+pickup.getPerCarry()+"\t\t"+pickup.getGoodsCarry());
			}
		}
		
	}
}
